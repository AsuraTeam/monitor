<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>平台权限配置</title><body class="gray-bg top-navigation">
    #include("/index/include.vm")

<div id="">
    <div id="page-wrapper" class="gray-bg">
        #include("/index/header.vm")
<div id="addConfig"></div>
<body>
<div class=" animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <button class="btn btn-success " type="button"
                            onclick="addConfig();">
                        <i class="fa fa-upload"></i>&nbsp;&nbsp;<span class="bold">添加页面</span>
                    </button>
                    <button class="btn btn-outline btn-primary " type="button"
                        onclick="window.location = '/authority/permission/list'">
                        <i class="fa fa-magnet"></i>&nbsp;&nbsp;<span class="bold">权限管理</span>
                    </button>
                </div>
                <div class="ibox-content" style="overflow:scroll;">
                    <table id="listTable"
                           class="table  table-bordered table-hover dataTables-example">
                        <thead>
                        <tr nowrap="nowrap" role="rows">
                            <th>操作名称</th>
                            <th>操作url</th>
                            <th>最近修改人</th>
                            <th>最近修改时间</th>
                            <th>编辑/删除</th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function addConfig(id){
        if(!id){
            id=0;
        }
        url = "/authority/pages/add";
        html = post({id:id}, url);
        $('#addConfig').html(html);
        $('#add_getui_config').modal('toggle');
    }

    function deleteConfig(id){
        url = "/authority/pages/delete";
        parent.layer.confirm("点击同意后,将删除数据", {
            btn: ['同意','不同意'], //按钮
            shade: false//不显示遮罩
        }, function(){
            result = post({id:id}, url);
            parent.layer.msg(JSON.stringify(result),  {icon:1})
            location.reload();
        }, function(){
            parent.layer.msg("取消操作",  {icon:2})
        });

    }
    function saveConfig(id){
        data = get_form_data();
        if(id){
            data["pagesId"] = id;
            data["id"] = id;
        }
        if(!data["pagesName"] || data["pagesName"].replace(/ /g,"").length < 6){
            parent.layer.msg("取消操作",  {icon:2})
            return;
        }
        if(!data["pagesUrl"] || data["pagesUrl"].replace(/ /g,"").length < 6){
            parent.layer.msg("取消操作",  {icon:2})
            return;
        }
        url = "/authority/pages/save";
        result = post(data, url);
        parent.layer.msg(JSON.stringify(result),  {icon:1});
        //$('#add_getui_config').modal('toggle');
        $('#listTable').dataTable().fnReloadAjax();
    }
    function loadData(){
        $("#listTable").dataTable({
            "filter": true,//去掉搜索框
            "ordering": false, // 是否允许排序
            "paginationType": "full_numbers", // 页码类型
            "destroy": true,
            "processing": true,
            "serverSide": true,
            "scrollX": true, // 是否允许左右滑动
            "displayLength": 10, // 默认长度
            "ajax": { // 请求地址
                "url": "/authority/pages/listData?t=" + new Date().getTime(),
                "type": 'post'
            },

            "columns": [ // 数据映射
                {"data": "pagesName"},
                {"data": "pagesUrl"},
                {"data": "lastModifyUser"},
                {"data": "lastModifyTime","mRender":function (data) {
                    data = data + "000"
                    return data?laydate.now(data, "YYYY-MM-DD hh:mm:ss"):"--";
                }},
                {"sWidth": "150px", "data": "pagesId", "mRender": function(data, type, full) {
                    return '<button type="button" onclick="addConfig('+data+')" class="btn btn-sm btn-warning">编辑</button>';
                }
                },
            ],
            "fnRowCallback": function (row, data) { // 每行创建完毕的回调
                $(row).data('recordId', data.recordId);
            }
        });
    }

    loadData();

</script>
</body>
</html>
